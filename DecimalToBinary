public class DecimalToBinary {

    public static void decimalToBinaryRecursive(int n) {
        if (n > 1) {
            decimalToBinaryRecursive(n / 2);
        }
        System.out.print(n % 2);
    }

    public static void decimalToBinaryIterative(int n) {
        StringBuilder binary = new StringBuilder();
        while (n > 0) {
            binary.insert(0, n % 2); // prepend remainder
            n = n / 2;
        }
        System.out.print(binary.toString());
    }

    public static void main(String[] args) {
        int num = 13; // Example

        System.out.print("Recursive binary of " + num + " = ");
        decimalToBinaryRecursive(num);
        System.out.println();

        System.out.print("Iterative binary of " + num + " = ");
        decimalToBinaryIterative(num);
        System.out.println();
    }
}
